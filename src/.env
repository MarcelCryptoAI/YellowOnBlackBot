# .env file - API Keys & Configuration
# Deze file wordt NOOIT gecommit naar git (staat in .gitignore)

# Backend API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_BACKEND_URL=http://localhost:3001

# OpenAI API Configuration
REACT_APP_OPENAI_API_KEY=sk-your-openai-key-here
REACT_APP_OPENAI_ORGANIZATION=org-your-org-id-here

# Bybit API Configuration (Default/Demo)
REACT_APP_BYBIT_API_KEY=your-bybit-api-key
REACT_APP_BYBIT_SECRET_KEY=your-bybit-secret-key
REACT_APP_BYBIT_TESTNET=true

# User Configuration
REACT_APP_USER_NAME=Marcel Stuivenberg
REACT_APP_USER_EMAIL=marcel@cryptoai.com

# Feature Flags
REACT_APP_ENABLE_LIVE_DATA=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_DEBUG_MODE=false

# External APIs
REACT_APP_COINGECKO_API=https://api.coingecko.com/api/v3
REACT_APP_BINANCE_API=https://api.binance.com

# Security
REACT_APP_ENCRYPTION_KEY=your-encryption-key-for-local-storage
REACT_APP_JWT_SECRET=your-jwt-secret