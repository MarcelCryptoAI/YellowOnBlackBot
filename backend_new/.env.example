# CTB Trading Bot Environment Configuration

# Application
APP_NAME="CTB Trading Bot"
APP_VERSION="2.0.0"
DEBUG=false

# Server
HOST="0.0.0.0"
PORT=8000

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ENCRYPTION_KEY="your-encryption-key-here-optional"

# Storage
STORAGE_PATH="./storage"
CREDENTIALS_FILE="encrypted_credentials.json"
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600

# ByBit API
BYBIT_TESTNET_URL="https://api-testnet.bybit.com"
BYBIT_MAINNET_URL="https://api.bybit.com"
BYBIT_TIMEOUT=30
BYBIT_RATE_LIMIT=120

# WebSocket
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10
WS_MAX_CONNECTIONS=100

# Logging
LOG_LEVEL="INFO"
LOG_FILE=""

# Data Update Intervals (seconds)
BALANCE_UPDATE_INTERVAL=30
POSITION_UPDATE_INTERVAL=15
MARKET_DATA_INTERVAL=5

# Risk Management
MAX_CONNECTIONS_PER_USER=10
MAX_POSITIONS_PER_CONNECTION=50